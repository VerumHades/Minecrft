<window>
    <default>
        <style src="templates/main.css"></style>
        <flex_frame 
            x="50% - 50m" y="50% - 50m" 
            width="300px" height="500px" 
            horizontal="false">
            <label width="100% - 2px" height="40px" id="new_world" class="interactable">New World</label>
            <label width="100% - 2px" height="40px" id="setttings" class="interactable">Settings</label>
        </flex_frame>
    </default>
    <world_menu>
        <flex_frame x="50% - 50m" y="0px" width="70%" height="100%" horizontal="false" id="world_selection_frame">
            <scrollable id="top_frame" width="100%" height="80%">
                
            </scrollable>
            <frame id="bottom_frame" width="100% - 2px" height="20%">
                <label id="back_to_menu" width="140px" height="40px" class="interactable">Back</label>
                <flex_frame x="25%" width="50%" height="100%" horizontal="false">
                    <flex_frame width="100%" height="100px" horizontal="false">
                        <label width="100% - 20px" height="40px" id="new_world_name_label">New world name:</label>
                        <input width="100% - 20px" height="40px" id="new_world_name"></input>
                    </flex_frame>
                    <label width="100% - 20px" height="40px" class="interactable" id="create_new_world">Create</label>
                </flex_frame>
            </frame>
        </flex_frame>
    </world_menu>
    <settings>
        <style src="templates/settings.css"></style>
        <scrollable x="50% - 50m" width="80%" height="100%">
            <flex_frame width="100% - 40px" expand="true" class="settings_section" horizontal="false">
                <label width="100%" height="40px" class="settings_section_title">Keybinds</label>
                <flex_frame width="100%" expand="true" id="keybind_container" horizontal="false">

                </flex_frame>
                <label width="100%" height="40px" class="settings_section_title">Mouse</label>
                
            </flex_frame>
        </scrollable>

        <style src="templates/main.css"></style> <!-- Return back to default style for dynamically added elements-->
    </settings>
</window>