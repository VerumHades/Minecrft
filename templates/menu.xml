<window>
    <default>
        <style src="templates/main.css"></style>
        <style src="templates/settings.css"></style>
        
        <frame class = "vertical_flex center" width="300px" height="500px" id="main_menu_selection">
            <label width="100%" height="40px" id="new_world" class="interactable">New World</label>
            <label width="100%" height="40px" id="setttings" class="interactable">Settings</label>
        </frame>
    </default>
    <world_menu>
        <frame class = "vertical_flex" x="50% - 50m" y="0px" width="70%" height="100%" id="world_selection_frame">
            <scrollable id="top_frame" width="100%" height="80%">
                
            </scrollable>
            <frame id="bottom_frame" width="100%" height="20%">
                <label id="back_to_menu" width="140px" height="40px" class="interactable">Back</label>
                <frame class = "vertical_flex" x="25%" width="50%" height="100%">
                    <frame class = "vertical_flex" width="100%" height="100px">
                        <label width="100%" height="40px" id="new_world_name_label">New world name:</label>
                        <input width="100%" height="40px" id="new_world_name"></input>
                    </frame>
                    <label width="100%" height="40px" class="interactable" id="create_new_world">Create</label>
                </frame>
            </frame>
        </frame>
    </world_menu>
    <settings>
        <label width="8%" height="40px" class="interactable" id="settings_back_button">Back</label>
        <scrollable x="50% - 50m" width="80%" height="100%" id="settings_scrollable">
            <label width="100%" height="40px" class="settings_section_title">Keybinds</label>
            <frame class = "settings_section" width="100%" id="keybind_container">

            </frame>
            <label width="100%" height="40px" class="settings_section_title">Mouse</label>
            <frame class = "settings_section" width="100%" >
                <frame id="mouse_sensitivity_container" width="100%" height="40px">
                    <label width="20%" height="100%">Sensitivity:</label>
                    
                </frame>
            </frame>
        </scrollable>
    </settings>
</window>